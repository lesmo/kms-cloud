@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <div>
        @using ( Html.BeginForm("CreateSession", "Login") ) {
            @Html.AntiForgeryToken()

            if ( Model != null ) {
                <p>
                    @string.Format(
                        LoginStrings.LoginError,
                        Html.ActionLink(LoginStrings.RegisterLink, "Register").ToHtmlString()
                    )
                </p>
            }

            <input type="email" name="email" placeholder="E-mail" />
            <input type="password" name="password" placeholder="********" />
            <input type="submit" value="@LoginStrings.Login" />
        }
</div>
</body>
</html>
